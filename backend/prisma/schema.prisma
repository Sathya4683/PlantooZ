generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id             Int            @id @default(autoincrement())
  email          String         @unique
  name           String?
  createdAt      DateTime       @default(now())

  // Streak tracking
  currentStreak  Int            @default(0)
  longestStreak  Int            @default(0)
  lastActivityAt DateTime?      // normalized to UTC midnight

  activities     UserActivity[]
  posts    Posts[]
  comments Comments[]
  likes    PostLikes[]
  plants         PlantCoordinates[]

  @@index([email])
}

model UserActivity {
  id        Int      @id @default(autoincrement())
  userId    Int
  date      DateTime // MUST be normalized to UTC midnight (YYYY-MM-DD)
  count     Int      @default(1)

  user      Users    @relation(fields: [userId], references: [id], onDelete: Cascade)

  // One row per user per day (critical invariant)
  @@unique([userId, date])
  @@index([userId, date])
}

model Items {
  item_id     Int      @id @default(autoincrement())
  item_name   String
  item_price  Decimal @db.Decimal(10, 2)
}


model Posts {
  id          Int         @id @default(autoincrement())
  userId      Int
  contentText String
  imageUrl    String?
  postType    String      @default("TEXT")
  createdAt   DateTime    @default(now())
  user        Users       @relation(fields: [userId], references: [id])
  comments    Comments[]
  likes       PostLikes[]

  @@index([createdAt])
}

model Comments {
  id          Int      @id @default(autoincrement())
  postId      Int
  userId      Int
  commentText String
  createdAt   DateTime @default(now())

  post Posts @relation(fields: [postId], references: [id])
  user Users @relation(fields: [userId], references: [id])
}

model PostLikes {
  id     Int @id @default(autoincrement())
  postId Int
  userId Int

  post Posts @relation(fields: [postId], references: [id])
  user Users @relation(fields: [userId], references: [id])

  @@unique([postId, userId])
}

model PlantCoordinates {
  plant_id   Int      @id @default(autoincrement())

  latitude   Float
  longitude  Float

  userId     Int
  user       Users   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt  DateTime @default(now())

  @@index([userId])
}
